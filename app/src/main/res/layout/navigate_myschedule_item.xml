<?xml version="1.0" encoding="utf-8"?><LinearLayout android:gravity="center_horizontal" android:orientation="vertical"    android:layout_width="fill_parent"    android:layout_height="wrap_content"    android:background="@color/black"    xmlns:android="http://schemas.android.com/apk/res/android">    <LinearLayout android:padding="5dp" android:layout_width="fill_parent"        android:layout_height="wrap_content" android:orientation="horizontal"        android:layout_marginRight="5dp" android:layout_marginLeft="5dp">        <LinearLayout android:orientation="vertical"            android:layout_width="0.0dip"            android:layout_height="wrap_content"            android:layout_weight="1.0"            android:layout_gravity="center|center_vertical">            <TextView                style="@style/common_txt" android:id="@+id/lbl1" android:textSize="18sp"                android:text="203 Jalapa Dr" />            <TextView                style="@style/common_txt" android:id="@+id/lbl2" android:textSize="15sp"                android:text="Kissimmee, FL 34743" />        </LinearLayout>        <RadioGroup            android:checkedButton="@+id/on"            android:id="@+id/toggle"            android:layout_width="60dp"            android:layout_height="30dp"            android:background="@drawable/navigate_toggle_shape"            android:layout_gravity="center_vertical"            android:orientation="horizontal">            <RadioButton                android:id="@+id/off"                android:background="@drawable/navigate_toggle_radio_shape"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:button="@null"                android:gravity="center"/>            <RadioButton                android:id="@+id/on"                android:background="@drawable/navigate_toggle_radio_shape"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:button="@null"                android:gravity="center"/>        </RadioGroup>    </LinearLayout></LinearLayout>