<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#92C83E">

        <TextView
            android:layout_width="match_parent" android:layout_height="0dp"
            android:text="Update Maintenance Information"
            android:textAlignment="center" android:gravity="center_vertical"
            android:layout_weight="0.7" android:textStyle="bold" android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent" android:layout_height="0dp"
            android:text="All fields are required"
            android:textAlignment="center"
            android:gravity="center_vertical" android:layout_weight="0.3"
            android:textStyle="bold" android:textColor="#FFFFFF" android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="150dp"
        android:background="@drawable/tpms_frame_shape0"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout style="@style/common_layout" android:layout_height="50dp">
            <TextView
                style="@style/common_txt"
                android:layout_width="350dp" android:text="VehicleName:"
                android:layout_marginLeft="5dp" android:textSize="20dp" />
            <TextView
                android:id="@+id/txtVehicle" style="@style/common_txt"
                android:textColor="#FFFFFF" android:textSize="20dp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout style="@style/common_layout" android:layout_height="50dp">
            <TextView
                style="@style/common_txt"
                android:layout_width="450dp" android:text="Maintenance Type:"
                android:layout_marginLeft="5dp" android:textSize="20dp" />
            <TextView
                android:id="@+id/txtDriver" style="@style/common_txt"
                android:textColor="#FFFFFF" android:textSize="20dp"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout style="@style/common_layout" android:layout_height="50dp">
            <TextView
                style="@style/common_txt"
                android:layout_width="350dp" android:text="Vendor:"
                android:layout_marginLeft="5dp" android:textSize="20dp" />
            <TextView
                android:id="@+id/txtDescription" style="@style/common_txt"
                android:textColor="#FFFFFF" android:textSize="20dp"
                android:gravity="right"/>
        </LinearLayout>

    </LinearLayout>

    <EditText android:id="@+id/editServiceOdometer" style="@style/common_edittext"
        android:hint="Service Odometer"/>

    <EditText android:id="@+id/editDueDate" style="@style/common_edittext"
        android:hint="Due date"/>

    <EditText android:id="@+id/editServiceCost" style="@style/common_edittext"
        android:hint="Service Cost"/>

    <EditText android:id="@+id/editComment" style="@style/common_edittext"
        android:hint="Comments"/>

    <Button android:id="@+id/btnIncidentSubmit" style="@style/common_btn"
        android:text="SAVE"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

</LinearLayout>
