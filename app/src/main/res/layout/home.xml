<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:weightSum="4"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout style="@style/home_row">
        <ImageView
            android:id="@+id/btnHomeStatus"
            style="@style/home_cell" android:src="@drawable/home_status"/>
        <ImageView
            android:id="@+id/btnHomeSettings"
            style="@style/home_cell" android:src="@drawable/home_settings"/>
        <ImageView
            android:id="@+id/btnHomeVehicle"
            style="@style/home_cell" android:src="@drawable/home_vehicle"/>
    </LinearLayout>

    <LinearLayout style="@style/home_row">
        <ImageView
            android:id="@+id/btnHomeTrip"
            style="@style/home_cell" android:src="@drawable/home_trip"/>
        <ImageView
            android:id="@+id/btnHomeAlert"
            style="@style/home_cell" android:src="@drawable/home_alert"/>
        <ImageView
            android:id="@+id/btnHomeEobr"
            style="@style/home_cell" android:src="@drawable/home_eobr"/>
    </LinearLayout>

    <LinearLayout style="@style/home_row">
        <ImageView
            android:id="@+id/btnHomeTpms"
            style="@style/home_cell" android:src="@drawable/home_tpms"/>
        <ImageView
            android:id="@+id/btnHomePol"
            style="@style/home_cell" android:src="@drawable/home_pol"/>
        <ImageView
            android:id="@+id/btnHomeNavigate"
            style="@style/home_cell" android:src="@drawable/home_navigate"/>
    </LinearLayout>

    <LinearLayout style="@style/home_row">
        <ImageView
            android:id="@+id/btnHomeMap"
            style="@style/home_cell" android:src="@drawable/home_map"/>
        <ImageView
            android:id="@+id/btnHomeFuellog"
            style="@style/home_cell" android:src="@drawable/home_fuellog"/>
        <ImageView
            android:id="@+id/btnHomeLogout"
            style="@style/home_cell" android:src="@drawable/home_logout"/>
    </LinearLayout>

</LinearLayout>


