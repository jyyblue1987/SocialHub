<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#92C83E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Work order"
            android:gravity="center_vertical"
            android:layout_weight="0.1"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:id="@+id/editSearch"
            android:layout_weight="0.9"
            android:background="@drawable/spinner_border"
            android:popupBackground="#000000"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <EditText android:id="@+id/editDate"
            style="@style/common_edittext" android:hint="Date"/>

        <Spinner android:id="@+id/spinVehicle" style="@style/common_edittext"/>

        <EditText android:id="@+id/editPMDetail"
            style="@style/common_edittext" android:hint="PM Detail Description"/>

        <LinearLayout style="@style/common_layout" android:gravity="center_vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Quantity"
                android:textColor="@color/white"/>

            <EditText android:id="@+id/editQuantity"
                android:layout_gravity="center_vertical" android:gravity="center_vertical"
                android:layout_width="60dp" style="@style/common_edittext"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <EditText android:id="@+id/editPMUnit"
            style="@style/common_edittext" android:hint="PM Unit/Cost"/>

        <EditText android:id="@+id/editDetail"
            style="@style/common_edittext" android:hint="Detail"/>

        <LinearLayout style="@style/common_layout"
            android:gravity="center_vertical|center"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Quantity"
                android:textSize="24sp"
                android:textColor="@color/left_nav_press_color"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="65$"
                android:textSize="24sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <Button android:id="@+id/btnIncidentSubmit" style="@style/common_btn"
            android:text="SAVE"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

    </LinearLayout>

</LinearLayout>
