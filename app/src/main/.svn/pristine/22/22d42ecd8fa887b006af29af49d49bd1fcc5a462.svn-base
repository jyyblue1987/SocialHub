<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/main" android:background="#130F0A" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/login_form" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingLeft="@dimen/pad_15dp" android:paddingTop="@dimen/pad_20dp" android:paddingRight="@dimen/pad_15dp" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:weightSum="1">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/board_color"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView3" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Front Tyre Pressure"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textView23" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:gravity="center_vertical"
                    android:textColor="#728B50"
                    android:id="@+id/textfront" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/frontnext" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/board_color"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Back Tyre Pressure"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textView24" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:gravity="center_vertical"
                    android:textColor="#728B50"
                    android:id="@+id/textback" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/backnext" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/board_color"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Tempreture Unit"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textView25" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:gravity="center_vertical"
                    android:textColor="#728B50"
                    android:id="@+id/texttempre" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/temprenext" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/board_color"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView6" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Waming Sound"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textView26" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="New Text"
                    android:gravity="center_vertical"
                    android:textColor="#728B50"
                    android:id="@+id/textalarm" />

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/alarmnext" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/board_color"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView7" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Waming Sound"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textView27" />
                <RadioGroup
                    android:checkedButton="@+id/on"
                    android:id="@+id/toggle"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/navigate_toggle_shape"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/off"
                        android:background="@drawable/navigate_toggle_radio_shape"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"/>

                    <RadioButton
                        android:id="@+id/on"
                        android:background="@drawable/navigate_toggle_radio_shape"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"/>

                </RadioGroup>


            </LinearLayout>

            <Button android:id="@id/btnLogin"
                android:layout_width="200dp" android:layout_height="35dp"
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:background="#92C83E"
                android:text="PROFILE"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>