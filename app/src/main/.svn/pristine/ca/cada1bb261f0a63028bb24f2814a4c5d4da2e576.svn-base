<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:weightSum="10">

    <TextView
        style="@style/common_txt" android:id="@+id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="90 PSI"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/layoutLeft"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/tpms_frame_shape">

            <Button android:id="@+id/btnBaseline" style="@style/common_round_btn"
                android:text="BASELINE" />

            <Button android:id="@+id/btnUnit" style="@style/common_round_btn"
                android:text="UNIT" />

            <Button android:id="@+id/btnTemp" style="@style/common_round_btn"
                android:text="TEMP" />

            <Button android:id="@+id/btnSave" style="@style/common_round_btn"
                android:text="SAVE" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRight"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        style="@style/common_txt" android:id="@+id/lbl2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="34F"
        android:layout_weight="1"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_weight="1"
        android:layout_gravity="right"/>

</LinearLayout>


