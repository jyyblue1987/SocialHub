<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.02"
            android:background="#92C83E"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Device Name"
                android:gravity="center_vertical"
                android:layout_weight="0.1"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="20dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:id="@+id/spinDevice"
                android:layout_weight="0.9"
                android:background="@drawable/spinner_border"
                android:popupBackground="#000000"
                android:layout_gravity="center_vertical"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Details"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/tpms_frame_shape0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="1"
            android:layout_weight="0.45">

            <LinearLayout style="@style/common_layout"
                android:layout_weight="0.20" android:weightSum="1">
                <TextView
                    style="@style/common_txt"
                    android:layout_width="wrap_content" android:text="Vehicle:"
                    android:layout_marginLeft="20dp" android:textSize="20dp" />
                <TextView
                    android:id="@+id/txtVehicle" style="@style/common_txt"
                    android:textColor="#FFFFFF" android:textSize="20dp"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout style="@style/common_layout"
                android:layout_weight="0.20" android:weightSum="1">
                <TextView
                    style="@style/common_txt"
                    android:layout_width="wrap_content" android:text="Driver:"
                    android:layout_marginLeft="20dp" android:textSize="20dp" />
                <TextView
                    android:id="@+id/txtDriver" style="@style/common_txt"
                    android:textColor="#FFFFFF" android:textSize="20dp"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout style="@style/common_layout"
                android:layout_weight="0.20" android:weightSum="1">
                <TextView
                    style="@style/common_txt"
                    android:layout_width="wrap_content" android:text="Description:"
                    android:layout_marginLeft="20dp" android:textSize="20dp" />
                <TextView
                    android:id="@+id/txtDescription" style="@style/common_txt"
                    android:textColor="#FFFFFF" android:textSize="20dp"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout style="@style/common_layout"
                android:layout_weight="0.20" android:weightSum="1">
                <TextView
                    style="@style/common_txt"
                    android:layout_width="wrap_content" android:text="Sim#:"
                    android:layout_marginLeft="20dp" android:textSize="20dp" />
                <TextView
                    android:id="@+id/txtSim" style="@style/common_txt"
                    android:textColor="#FFFFFF" android:textSize="20dp"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout style="@style/common_layout"
                android:layout_weight="0.20" android:weightSum="1">
                <TextView
                    style="@style/common_txt"
                    android:layout_width="wrap_content" android:text="Serial#:"
                    android:layout_marginLeft="20dp" android:textSize="20dp" />
                <TextView
                    android:id="@+id/txtSerial" style="@style/common_txt"
                    android:textColor="#FFFFFF" android:textSize="20dp"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
