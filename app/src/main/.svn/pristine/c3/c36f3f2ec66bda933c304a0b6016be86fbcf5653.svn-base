<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white"
    android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="20dp" android:paddingBottom="20dp">

    <TextView android:textSize="20sp" android:textColor="#323234" android:id="@+id/lbl_contactName"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Contact Name" />
    <EditText android:id="@+id/contactName" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <TextView android:textSize="20sp" android:textColor="#323234" android:id="@+id/lbl_mobileNo"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mobile No" />
    <EditText android:id="@+id/contactMobileNo" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <TextView android:textSize="20sp" android:textColor="#323234" android:id="@+id/lbl_email"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email" />
    <EditText android:id="@+id/contactEmail" android:layout_width="fill_parent" android:layout_height="wrap_content" />

    <Button android:id="@+id/btnAdd" android:background="@drawable/btn_login_back"
        android:layout_marginTop="25dp" android:gravity="center|center_vertical"
        android:textColor="@color/white" android:textSize="25sp"
        android:layout_width="fill_parent" android:layout_height="45dp" style="@style/btn"/>

</LinearLayout>