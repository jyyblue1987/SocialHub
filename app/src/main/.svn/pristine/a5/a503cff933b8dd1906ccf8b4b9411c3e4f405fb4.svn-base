<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#130E07">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.02"
            android:background="#92C83E"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Device Name  "
                android:gravity="center_vertical"
                android:id="@+id/textView16"
                android:layout_weight="0.1"
                android:textColor="#FFFFFF"
                android:textAlignment="textEnd"
                android:textSize="20dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:id="@+id/device_spinner"
                android:layout_weight="0.9"
                android:background="#000000"
                android:popupBackground="#FFFFFF"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Details"
            android:id="@+id/textView22"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/tpms_frame_shape"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="1"
            android:layout_weight="0.45">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Vehicle :"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView17"
                    android:layout_weight="0.5"
                    android:textColor="#728B50"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textVehicle"
                    android:textSize="18dp"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Driver :"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView18"
                    android:layout_weight="0.5"
                    android:textColor="#728B50"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textdriver"
                    android:textSize="18dp"
                    android:layout_weight="0.5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Description :"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView19"
                    android:layout_weight="0.5"
                    android:textColor="#728B50"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textdesc"
                    android:textSize="18dp"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sim # :"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView20"
                    android:layout_weight="0.5"
                    android:textColor="#728B50"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textsim"
                    android:textSize="18dp"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Serial # :"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/textView21"
                    android:layout_weight="0.5"
                    android:textColor="#728B50"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical"
                    android:id="@+id/textserial"
                    android:textSize="18dp"
                    android:layout_weight="0.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
