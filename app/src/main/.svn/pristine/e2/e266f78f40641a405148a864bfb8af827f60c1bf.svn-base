<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/main" android:background="@drawable/login_screen" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/login_form" android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingLeft="15dp" android:paddingTop="20dp" android:paddingRight="15dp" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:weightSum="1">
            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
             <EditText android:id="@+id/inputUserId" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="@string/username" android:drawableRight="@drawable/ic_username" style="@style/editext_normal"
                 android:background="#CCCCCC"
                 android:layout_marginTop="250dp"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp">
                <requestFocus />
            </EditText>
            <EditText android:id="@+id/inputUserPassword" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:hint="@string/password" android:drawableRight="@drawable/ic_pwd" android:inputType="textPassword" style="@style/editext_normal"
                android:background="#CCCCCC"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <LinearLayout android:gravity="right|bottom" android:id="@id/a" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">

                <android.support.v4.widget.Space android:layout_width="30dp" android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button android:id="@+id/btnLogin"
                android:layout_width="200dp" android:layout_height="35dp"
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:background="#92C83E"
                android:text="SIGN IN"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_marginTop="15dp" />
            <Button android:textSize="14dp" android:textStyle="bold" android:textColor="#92C83E" android:id="@+id/registebtn" android:layout_width="wrap_content" android:layout_height="27dp" android:text="Forgot Password"
               android:background="#000000"  android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>