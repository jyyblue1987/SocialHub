<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/main" android:background="#130F0A" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingLeft="15dp" android:paddingTop="20dp" android:paddingRight="15dp" android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/anim2" />

            <EditText android:id="@+id/firstname" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="First Name"    style="@style/editext_normal"
                android:background="#CCCCCC"
                android:textColorHint="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1">

            </EditText>
            <EditText android:id="@+id/lastname" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:hint="Last Name"   style="@style/editext_normal"
                android:background="#CCCCCC"
                android:textColorHint="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1" />
            <EditText android:id="@+id/email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Email Address"    style="@style/editext_normal"
                android:background="#CCCCCC"
                android:textColorHint="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"/>

            <EditText android:id="@+id/license" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:hint="License Number"   style="@style/editext_normal"
                android:background="#CCCCCC"
                android:textColorHint="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"/>

            <EditText android:id="@+id/mobilenm" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Mobile Number"    style="@style/editext_normal"
                android:background="#CCCCCC"
                android:textColorHint="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"/>

            <EditText android:id="@+id/address" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:hint="Address"   style="@style/editext_normal"
                android:background="#CCCCCC"
                android:textColorHint="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"/>
            <EditText android:id="@+id/city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColorHint="#000000"
                style="@style/editext_normal"
                android:background="#CCCCCC"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:background="#CCCCCC"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"/>

            <Button android:id="@id/btnLogin"
                android:layout_width="250dp" android:layout_height="35dp"
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:background="#92C83E"
                android:text="PROFILE"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:layout_marginTop="30dp" />
        </LinearLayout>
</LinearLayout>